<cruisecontrol>
	<property file="./system.properties" />
	<property name="project.name" value="com.buglabs.osgi.concierge"/>
	
	<project name="${project.name}" buildafterfailed="false">
		<listeners>
			<currentbuildstatuslistener file="logs/${project.name}/status.txt" />
		</listeners>
		<bootstrappers></bootstrappers>

		<modificationset quietperiod="${quietperiod}">
			<cvs cvsroot="${cvs.internal}" module="com.buglabs.osgi.concierge.core" tag="${build.level}" />
			<cvs cvsroot="${cvs.internal}" module="com.buglabs.osgi.concierge.devtools" tag="${build.level}" />
			<cvs cvsroot="${cvs.internal}" module="com.buglabs.osgi.concierge.feature" tag="${build.level}" />
			<cvs cvsroot="${cvs.internal}" module="com.buglabs.osgi.concierge.runtime" tag="${build.level}" />
			<cvs cvsroot="${cvs.internal}" module="com.buglabs.osgi.concierge.ui" tag="${build.level}" />
			<cvs cvsroot="${cvs.internal}" module="com.buglabs.osgi.concierge.doc" tag="${build.level}" />
			<cvs cvsroot="${cvs.internal}" module="com.buglabs.osgi.concierge.updatesite" tag="${build.level}" />
		</modificationset>

		<schedule interval="${scan_interval}">
			<ant anthome="/usr" buildfile="${project.dir}/${project.name}.xml" target="build" uselogger="true" usedebug="false"></ant>
		</schedule>

		<log logdir="logs/${project.name}" />

		<publishers>
			<artifactspublisher dir="${checkout.dir}/${project.name}.feature/dist" dest="artifacts/${project.name}" />
		</publishers>
	</project>
</cruisecontrol>
